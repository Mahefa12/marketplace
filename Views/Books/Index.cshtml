@model Marketplace.ViewModels.BooksIndexViewModel
@{
    ViewData["Title"] = "Browse Books";
}
<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="h3">Books Marketplace</h1>
    <a class="btn btn-primary" asp-action="Create">Sell a Book</a>
</div>

<form class="row g-3 mb-3" method="get">
    <div class="col-md-6">
        <input type="text" class="form-control" placeholder="Search by title or author" name="q" value="@Model.Query">
    </div>
    <div class="col-md-3">
        <select class="form-select" name="sort" value="@Model.Sort">
            <option value="newest">Newest</option>
            <option value="price_asc">Price: Low to High</option>
            <option value="price_desc">Price: High to Low</option>
        </select>
    </div>
    <div class="col-md-3">
        <select class="form-select" name="category" aria-label="Filter by category">
            <option value="">All Categories</option>
            @await Html.PartialAsync("_CategoryOptions")
        </select>
    </div>
    <div class="col-12">
        <button class="btn btn-outline-secondary" type="submit">Apply</button>
    </div>
</form>
<form asp-controller="SavedSearches" asp-action="Save" method="post" class="row g-2 mb-3" aria-label="Save this search">
    <input type="hidden" name="q" value="@Model.Query" />
    <input type="hidden" name="category" value="@Model.Category" />
    <div class="col-md-3">
        <input class="form-control" name="contact.Name" placeholder="Your name" />
    </div>
    <div class="col-md-3">
        <input class="form-control" name="contact.Email" placeholder="Your email" aria-label="Your email" />
    </div>
    <div class="col-md-3">
        <input class="form-control" name="contact.Phone" placeholder="Your phone" aria-label="Your phone" />
    </div>
    <div class="col-md-3">
        <select class="form-select" name="schedule" aria-label="Alert schedule">
            <option value="daily">Daily</option>
            <option value="weekly">Weekly</option>
        </select>
    </div>
    <div class="col-md-3">
        <button class="btn btn-outline-primary w-100" type="submit">Save This Search</button>
    </div>
    <div>
        <p>NB: Should the book currently be unavailable, please provide the following information. You will receive a notification once the book is acessible.</p>
    </div>
</form>

<div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
@foreach (var b in Model.Items)
{
    <div class="col">
        <div class="card h-100 shadow-sm">
            <div class="card-body">
                <h5 class="card-title">@b.Title</h5>
                <h6 class="card-subtitle mb-2 text-muted">by @b.Author @(!string.IsNullOrWhiteSpace(b.Version) ? $"- {b.Version}" : "")</h6>
                <p class="card-text"><strong>Price:</strong> R @(b.Price.ToString("F2"))</p>
                <p class="card-text"><strong>Condition:</strong> @b.Condition</p>
            </div>
            <div class="card-footer bg-white border-0 d-flex gap-2">
                <a class="btn btn-sm btn-outline-primary" asp-action="Details" asp-route-id="@b.Id">Details</a>
                <a class="btn btn-sm btn-primary" asp-action="Buy" asp-route-id="@b.Id">Buy</a>
            </div>
        </div>
    </div>
}

<nav class="mt-3">
    <ul class="pagination">
        @for (var p = 1; p <= Model.TotalPages; p++)
        {
            var active = p == Model.Page ? "active" : "";
            <li class="page-item @active">
                <a class="page-link" href="?q=@Model.Query&sort=@Model.Sort&category=@Model.Category&page=@p">@p</a>
            </li>
        }
    </ul>
</nav>
</div>

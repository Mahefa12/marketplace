@model Book
@{
    ViewData["Title"] = "Book Details";
}

<div class="row">
    <div class="col-lg-8 mx-auto">
        <div class="card shadow-sm">
            <div class="card-body">
                @if (TempData["Success"] != null)
                {
                    <div class="alert alert-success">@TempData["Success"]</div>
                }
                <h1 class="h4">@Model.Title</h1>
                <p class="text-muted">by @Model.Author @(!string.IsNullOrWhiteSpace(Model.Version) ? $"- {Model.Version}" : "")</p>
                <p><strong>Seller:</strong> @Model.SellerName</p>
                <p><strong>Contact:</strong> @Model.SellerEmail, @Model.SellerPhone</p>
            </div>
            <div class="card-footer bg-white border-0 d-flex gap-2">
                <a class="btn btn-primary" asp-action="Buy" asp-route-id="@Model.Id">Buy</a>
                <a class="btn btn-outline-secondary" asp-action="Index">Back</a>
            </div>
        </div>
    </div>
}</div>


@model Marketplace.ViewModels.PurchaseRequestViewModel
@{
    var book = (Book)ViewData["Book"]!;
    ViewData["Title"] = "Buy Book";
}

<div class="row">
    <div class="col-lg-8 mx-auto">
        <div class="card shadow-sm">
            <div class="card-body">
                <h1 class="h4 mb-3">Provide Your Details</h1>
                <div class="alert alert-info">
                    You are buying: <strong>@book.Title</strong> by @book.Author
                </div>
                <form asp-action="Buy" method="post">
                    <input type="hidden" asp-for="BookId" />
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="mb-3">
                        <label class="form-label">Name</label>
                        <input asp-for="BuyerContact.Name" class="form-control" />
                        <span asp-validation-for="BuyerContact.Name" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Email</label>
                        <input asp-for="BuyerContact.Email" class="form-control" />
                        <span asp-validation-for="BuyerContact.Email" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Phone</label>
                        <input asp-for="BuyerContact.Phone" class="form-control" />
                        <span asp-validation-for="BuyerContact.Phone" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Offer Price (optional)</label>
                        <input asp-for="OfferPrice" class="form-control" />
                    </div>
                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-primary">Submit Request</button>
                        <a asp-action="Details" asp-route-id="@book.Id" class="btn btn-outline-secondary">Back</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
}</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

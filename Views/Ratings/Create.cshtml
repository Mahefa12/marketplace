@{
    ViewData["Title"] = "Rate Seller";
    var prId = (int)ViewData["PurchaseRequestId"]!;
}
<div class="row">
    <div class="col-md-6 col-lg-5 mx-auto">
        <div class="card shadow-sm">
            <div class="card-body">
                <h1 class="h4 mb-3">Rate Seller</h1>
                <form asp-action="Create" method="post">
                    <input type="hidden" name="purchaseRequestId" value="@prId" />
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="mb-3">
                        <label class="form-label">Stars (1-5)</label>
                        <select class="form-select" name="stars">
                            <option>1</option>
                            <option>2</option>
                            <option>3</option>
                            <option>4</option>
                            <option>5</option>
                        </select>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Comment (optional)</label>
                        <textarea name="comment" class="form-control" rows="3"></textarea>
                    </div>
                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-primary">Submit</button>
                        <a asp-controller="Admin" asp-action="Dashboard" class="btn btn-outline-secondary">Back</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
}</div>


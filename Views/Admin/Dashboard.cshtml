@model IEnumerable<PurchaseRequest>
@{
    ViewData["Title"] = "Admin Dashboard";
}
<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="h3">Purchase Requests</h1>
    <a class="btn btn-outline-danger" asp-action="Logout">Logout</a>
}</div>

@if (!Model.Any())
{
    <div class="alert alert-info">No purchase requests yet.</div>
}
else
{
    <div class="table-responsive">
        <table class="table table-striped align-middle">
            <thead>
                <tr>
                    <th>Book</th>
                    <th>Seller</th>
                    <th>Buyer</th>
                    <th>Contact</th>
                    <th>Requested</th>
                </tr>
            </thead>
            <tbody>
            @foreach (var r in Model)
            {
                <tr>
                    <td>
                        <div class="fw-semibold">@r.Book?.Title</div>
                        <div class="text-muted">@r.Book?.Author @(!string.IsNullOrWhiteSpace(r.Book?.Version) ? $"- {r.Book?.Version}" : "")</div>
                    </td>
                    <td>
                        <div>@r.Book?.SellerName</div>
                        <div class="text-muted small">@r.Book?.SellerEmail | @r.Book?.SellerPhone</div>
                    </td>
                    <td>@r.BuyerName</td>
                    <td>@r.BuyerEmail | @r.BuyerPhone</td>
                    <td>@r.CreatedAt.ToLocalTime().ToString("g")</td>
                </tr>
            }
            </tbody>
        </table>
    </div>
}

